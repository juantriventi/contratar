<!-- all-users.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Usuarios</title>
  <!-- Agrega el enlace a tu archivo CSS de Tailwind -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-md w-1/3 text-center">  
    <% if (user) { %>
    <h1 class="text-2xl font-bold mb-4">Lista de Usuarios</h1>
    <ul class="list-disc text-left">
      <% users.forEach(user => { %>
        <li><%= user.username %></li>
      <% }); %>
    </ul>
    <a href="/" class="mt-4 text-blue-500 hover:underline">Volver a Inicio</a>
  </div>
  <% } else { %>
    <p>No estás logueado. Por favor <a href="/login" class="text-blue-500 hover:underline">inicia sesión</a>.</p>
  <% } %>
</body>
</html>
